#include <iostream>
using namespace std;

int main()
{
	// Step 1: Declare data type and variable
	double weight;

	// Step 2: Display prompt and input
	cout << "Enter weight (lbs.) of package: ";
	cin >> weight;

	// Step  3: Display shipping cost based on weight using if else statements
	if (weight > 0 && weight <= 1)
		cout << "The shipping cost is 3.50 (USD)." << endl;
	else if (weight > 1 && weight <= 3)
		cout << "The shipping cost is 5.50 (USD)." << endl;
	else if (weight > 3 && weight <= 10)
		cout << "The shipping cost is 8.50 (USD)." << endl;
	else if (weight > 10 && weight <= 20)
		cout << "The shipping cost is 10.50 (USD)." << endl;
	else
		cout << "The package cannot be shipped." << endl;

	return 0;
}

